<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pixiv_Wallpaper_for_Win10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:System="using:System" x:Name="设置"
    x:Class="Pixiv_Wallpaper_for_Win10.SettingPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:Name="sp1" >
            <TextBlock Text="更新时间" Margin="30,10,0,0" FontSize="20"/>
            <TextBlock Text="设置更新图片的时间间隔" FontSize="15" Margin="30,0,0,0"/>
            <ComboBox Margin="30,10,0,0" Width="200" x:Name="combox1" DisplayMemberPath="Key" SelectedValuePath="Value">
            </ComboBox>
            <TextBlock Text="推荐模式" Margin="30,0,0,0" FontSize="20"/>
            <RadioButton x:Name="radiobutton1" GroupName="mode" Margin="30,0,0,0" Content="每日Top50" IsChecked="True"/>
            <RadioButton x:Name="radiobutton2" GroupName="mode" Margin="30,0,0,0" Content="猜你喜欢（需登录）"/>
            <TextBlock Text="Pixiv登录信息" Margin="30,10,0,0" FontSize="15"/>
            <StackPanel x:Name="sp2" Orientation="Horizontal">
                <TextBlock Text="账号:" Margin="30,10,0,0" FontSize="15"/>
                <TextBox x:Name="textbox1" Margin="10,10,0,0"  Width="200"/>
            </StackPanel>
            <StackPanel x:Name="sp3" Orientation="Horizontal">
                <TextBlock Text="密码:" Margin="30,10,0,0" FontSize="15"/>
                <PasswordBox x:Name="passwordbox1" Margin="10,10,0,0" Width="200" />
            </StackPanel>
            <Button x:Name="button1" Content="确定"  Click="button1_Click" Margin="30,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
